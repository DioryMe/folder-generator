{
  "name": "@diograph/folder-generator",
  "version": "0.4.0-rc1",
  "description": "Generates diograph from folder",
  "license": "MIT",
  "author": "Olli-Pekka Pohjola <op@diory.me>, Jouni Alanen <jouni@diory.me>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build-watch": "yarn build --watch",
    "prettier": "prettier --write .",
    "test": "jest --verbose",
    "test-watch": "jest --watch",
    "prepare": "yarn test && yarn prettier && yarn build"
  },
  "dependencies": {
    "@diograph/diograph": "^0.4.1",
    "@diograph/file-generator": "^0.1.3",
    "path-browserify": "^1.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@diograph/local-client": "^0.4.1",
    "@diory/types": "^0.4.2",
    "@types/jest": "^27.4.0",
    "@types/path-browserify": "^1.0.2",
    "@types/sharp": "*",
    "@types/uuid": "^8.3.4",
    "jest": "^27.5.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist",
      "node_modules"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!multiformats)"
    ],
    "transform": {
      "node_modules/multiformats/.+\\.(j|t)sx?$": "babel-jest"
    }
  },
  "keywords": [
    "diory",
    "diograph"
  ]
}
